<h1>Listing all novels</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Doi</th>
    <th>Student</th>
    <th>Price</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @novels.each do |novel| %>
  <tr>
    <td><%= novel.title %></td>
    <td><%= novel.doi %></td>
    <td><%= novel.student %></td>
    <td><%= novel.price %></td>
    <td><%= link_to 'Show', novel %></td>
    <td><%= link_to 'Edit', edit_novel_path(novel) %></td>
    <td><%= link_to 'Destroy', novel, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

